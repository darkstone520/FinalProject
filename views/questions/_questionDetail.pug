.content= question.content
.tags.badges
  each tag in question.tags
    span.badge.badge-phill.badge-secondary= tag
    | 

#TicketReg.panel_body
  table#ticket_table.ticket_table(width="100%", border="0", cellpadding="0", cellspacing="0", data-automation="ticket_table")
    tbody
      tr.ticket_table_head
        td(width="15%", nowrap="nowrap")
          | Location
        td Start Date
        td End Date
        td Ticket Price
        td
      tr.ticket_row
        td.ticket_type_name
          .ticket_content= question.location
        td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
          .ticket_content= question.start_date
        td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
          .ticket_content= question.finish_date
        td.price_td(nowrap="nowrap")
          input(type="hidden", name="cost_37817157_None", value="0.00")
          .ticket_content= question.price
        td.fee_td(nowrap="nowrap")


    tbody
      tr.ticket_table_head
        td Organization
        td Event Categories
        td Event Area
      tr.ticket_row
              td.ticket_type_name
                .ticket_content= question.organization
              td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
                .ticket_content= question.event_categories
              td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
                .ticket_content= question.event_area

.row
  .col-sm
    .numbers.
      #[span.number.num-votes= question.numLikes] likes,
      #[span.number.num-answers= question.numAnswers] participants,
      #[span.number.num-views= question.numReads] reads
  .col-sm
    .author
      | Created by #{moment(question.createdAt).format('YYYY-MM-DD')}
      if question.author
        | 
        | by #[a(href=`/questions/myWrite/${question.author.id}`)= question.author.name] 
