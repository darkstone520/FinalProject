.content= event.content
.tags.badges
  each tag in event.tags
    span.badge.badge-phill.badge-secondary= tag
    | 

#TicketReg.panel_body
  table#ticket_table.ticket_table(width="100%", border="0", cellpadding="0", cellspacing="0", data-automation="ticket_table")
    tbody
      tr.ticket_table_head
        td(width="15%", nowrap="nowrap")
          | Location
        td Start Date
        td End Date
        td Ticket Price
        td
        td(width="70", align="right") Quantity
      tr.ticket_row
        td.ticket_type_name
          .ticket_content= event.location
        td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
          .ticket_content= event.start_date
        td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
          .ticket_content= event.finish_date
        td.price_td(nowrap="nowrap")
          input(type="hidden", name="cost_37817157_None", value="0.00")
          .ticket_content= event.price
        td.fee_td(nowrap="nowrap")
        td(align="right", nowrap="nowrap")
          label.is-hidden-accessible(for="quant_37817157_None") Ticket Quantity Select
          select#quant_37817157_None.ticket_table_select(name="quant_37817157_None", onchange="updateCheckout();")
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
            option(value="6") 6
            option(value="7") 7
            option(value="8") 8
            option(value="9") 9
            option(value="10") 10

    tbody
      tr.ticket_table_head
        td Organization
        td Event Categories
        td Event Area
      tr.ticket_row
              td.ticket_type_name
                .ticket_content= event.organization
              td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
                .ticket_content= event.event_categories
              td(nowrap="nowrap", content="2017-12-31 09:30:00-08:00")
                .ticket_content= event.event_area

.row
  .col-sm
    .numbers.
      #[span.number.num-votes= event.numLikes] likes,
      #[span.number.num-answers= event.numAnswers] participants,
      #[span.number.num-views= event.numReads] reads
  .col-sm
    .author
      | Created by #{moment(event.createdAt).format('YYYY-MM-DD')}
      if event.author
        | 
        | by #[a(href=`/users/${event.author.id}`)= event.author.name] 
