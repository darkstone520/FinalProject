extends ../layout

include ../includes/_paginate

block content
  .container
    .row
      .col
        form.form-inline.search-input-group(action='/events', method='GET')
          i.fa.fa-search
          input.form-control.mr-sm-2(type='text', name='term', placeholder='지역, 분야, Event 이름, 내용으로 검색 가능합니다.', aria-label='Search', value=term)


    h1.main-title 
      | Events
      if events.total > 0
        .small Total #{events.total} Event(s)

    if events.total <= 0 
      .alert.alert-info No events available yet
    else
      .events
        each event in events.docs
          .event
            a.title(href=`/events/${event.id}`)= event.title
            include _event

      +paginate(events, '/events', {query: "???XXX&&"})

    hr
    a.btn.btn-primary.create-btn(href='/events/new') Create Event
